<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Demo Credentials" class="demoCredentialsDialog" contentWidth="400px">
        <content>
            <VBox class="sapUiMediumMargin">
                <MessageStrip text="Use these credentials for demonstration purposes:" type="Information" class="sapUiSmallMarginBottom" />
                
                <VBox class="credentialItem">
                    <Label text="Demo Login:" design="Bold" />
                    <Text text="demo" class="credentialValue" />
                    <Label text="Password:" design="Bold" />
                    <Text text="demo" class="credentialValue" />
                </VBox>
                
                <VBox class="credentialItem">
                    <Label text="SAP Backend (if available):" design="Bold" />
                    <Text text="K901900" class="credentialValue" />
                    <Label text="Password:" design="Bold" />
                    <Text text="12345" class="credentialValue" />
                </VBox>
                
                <MessageStrip text="Demo login will bypass authentication and take you directly to the dashboard." 
                             type="Success" 
                             class="sapUiSmallMarginTop" />
            </VBox>
        </content>
        <buttons>
            <Button text="Use Demo Login" type="Emphasized" press="onUseDemoCredentials" />
            <Button text="Close" press="onCloseDemoDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
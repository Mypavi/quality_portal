<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Demo Credentials" class="demoCredentialsDialog" contentWidth="400px">
        <content>
            <VBox class="sapUiMediumMargin">
                <MessageStrip text="Use these demo credentials to test the application:" type="Information" class="sapUiSmallMarginBottom" />
                
                <VBox class="credentialItem">
                    <Label text="User ID:" design="Bold" />
                    <Text text="K901900" class="credentialValue" />
                </VBox>
                
                <VBox class="credentialItem">
                    <Label text="Password:" design="Bold" />
                    <Text text="12345" class="credentialValue" />
                </VBox>
                
                <MessageStrip text="These credentials connect to the live SAP backend system." type="Success" class="sapUiSmallMarginTop" />
            </VBox>
        </content>
        <buttons>
            <Button text="Use Demo Credentials" type="Emphasized" press="onUseDemoCredentials" />
            <Button text="Close" press="onCloseDemoDialog" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
<mvc:View controllerName="quality.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core">
    <Page id="dashboardPage" title="Quality Engineer Dashboard" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <VBox class="sapUiSmallMargin">
                <HBox justifyContent="SpaceAround" class="sapUiMediumMarginBottom">
                    <GenericTile header="Inspection Lots" frameType="OneByOne" press="onTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginEnd">
                        <tileContent>
                            <TileContent>
                                <NumericContent value="{inspectionCount>/count}" icon="sap-icon://inspection" />
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    <GenericTile header="Result Recording" frameType="OneByOne" press="onResultRecordingPress" class="sapUiTinyMarginBegin sapUiTinyMarginEnd">
                        <tileContent>
                            <TileContent>
                                <NumericContent value="{resultCount>/count}" icon="sap-icon://form" />
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    <GenericTile header="Usage Decision" frameType="OneByOne" press="onUsageDecisionPress" class="sapUiTinyMarginBegin sapUiTinyMarginEnd">
                        <tileContent>
                            <TileContent>
                                <NumericContent value="{usageCount>/count}" icon="sap-icon://approvals" />
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                </HBox>

                <Toolbar class="sapUiSmallMarginBottom">
                    <Title text="Inspection Lots" level="H2" />
                    <ToolbarSpacer />
                    <SearchField search="onSearch" width="auto" placeholder="Search Inspection Lot" />
                </Toolbar>
                
                <Table id="inspectionTable" items="{inspection>/ZQM_INSPECT_PR}" growing="true" growingThreshold="10">
                    <columns>
                        <Column>
                            <Text text="Inspection Lot" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Plant" />
                        </Column>
                         <Column minScreenWidth="Tablet" demandPopin="true">
                            <Text text="Material" />
                        </Column>
                        <Column hAlign="End">
                            <Text text="Quantity" />
                        </Column>
                        <Column>
                            <Text text="Usage Decision" />
                        </Column>
                         <Column>
                            <Text text="Code" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press="onInspectionLotPress">
                            <cells>
                                <ObjectIdentifier title="{inspection>InspectionLotNumber}" text="{inspection>LotOrigin}" />
                                <Text text="{inspection>PlantDescription} ({inspection>Plant})" />
                                <Text text="{inspection>SelectedMaterial}" />
                                <ObjectNumber number="{inspection>ActualQuantity}" unit="{inspection>UnitOfMeasure}" />
                                <ObjectStatus text="{path: 'inspection>UsageDecisionCode', formatter: '.formatUDText'}" state="{path: 'inspection>UsageDecisionCode', formatter: '.formatUDState'}" />
                                <Text text="{inspection>UsageDecisionCode}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>

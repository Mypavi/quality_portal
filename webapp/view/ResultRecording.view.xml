<mvc:View controllerName="quality.controller.ResultRecording"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <Page id="resultPage" title="Result Recording" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="resultTable" items="{result>/ZQM_RESULT_PR}" growing="true" growingThreshold="10">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Inspection Results" level="H2"/>
                        <ToolbarSpacer />
                        <SearchField search="onSearch" width="auto" placeholder="Search Inspection Lot" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Inspection Lot" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Plant" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Inspector" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Category" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Stock Code" />
                    </Column>
                     <Column>
                        <Text text="Status" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{result>InspectionLotNumber}" />
                            <Text text="{result>PlantCode}" />
                            <Text text="{result>InspectorName}" />
                            <Text text="{path: 'result>RecordedDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}" />
                            <ObjectStatus text="{result>ResultCategory}" state="{path: 'result>ResultCategory', formatter: '.formatCategoryState'}" />
                            <ObjectNumber number="{result>StockCode}" />
                            <!-- Display Booking Status based on Usage Decision Code availability. If code exists, it's View Only. -->
                            <ObjectStatus 
                                text="{= ${result>UsageDecisionCode} ? 'View Only' : 'Editable' }"
                                state="{= ${result>UsageDecisionCode} ? 'Warning' : 'Success' }"
                                icon="{= ${result>UsageDecisionCode} ? 'sap-icon://display' : 'sap-icon://edit' }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>

<mvc:View controllerName="quality.controller.ResultRecording"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <Page id="resultPage" title="Result Recording" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <!-- Header: Lot Details -->
            <ObjectHeader
                title="Lot {inspection>InspectionLotNumber}"
                number="{inspection>ActualQuantity}"
                numberUnit="{inspection>UnitOfMeasure}"
                intro="{inspection>PlantDescription} ({inspection>Plant})"
                backgroundDesign="Translucent">
                <attributes>
                    <ObjectAttribute title="Material" text="{inspection>SelectedMaterial}" />
                    <ObjectAttribute title="Origin" text="{inspection>LotOrigin}" />
                </attributes>
                <statuses>
                    <ObjectStatus title="Status"
                        text="{path: 'inspection>UsageDecisionCode', formatter: '.formatUDText'}"
                        state="{path: 'inspection>UsageDecisionCode', formatter: '.formatUDState'}" />
                </statuses>
            </ObjectHeader>

            <!-- Section: Usage Decision Actions -->
            <Panel class="sapUiResponsiveMargin" width="auto" visible="{= !!${inspection>InspectionLotNumber} }">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Usage Decision" level="H2" />
                    </Toolbar>
                </headerToolbar>
                <content>
                    <VBox alignItems="Center" class="sapUiMediumMargin">
                        <!-- Status Display -->
                        <HBox visible="{= !!${inspection>UsageDecisionCode} }" alignItems="Center">
                            <core:Icon src="{= ${inspection>UsageDecisionCode} === 'A' ? 'sap-icon://accept' : 'sap-icon://decline' }" 
                                       size="2rem" 
                                       color="{= ${inspection>UsageDecisionCode} === 'A' ? 'Positive' : 'Negative' }" 
                                       class="sapUiSmallMarginEnd" />
                            <Title text="{= ${inspection>UsageDecisionCode} === 'A' ? 'LOT ACCEPTED' : 'LOT REJECTED' }" 
                                   level="H1" 
                                   class="{= ${inspection>UsageDecisionCode} === 'A' ? 'sapUiPositiveText' : 'sapUiNegativeText' }" />
                        </HBox>

                        <!-- Action Buttons (Visible if Pending) -->
                        <HBox visible="{= !${inspection>UsageDecisionCode} }">
                            <Button text="Accept Lot" type="Accept" press="onAcceptPress" class="sapUiMediumMarginEnd" width="150px" icon="sap-icon://accept" />
                            <Button text="Reject Lot" type="Reject" press="onRejectPress" class="sapUiMediumMarginEnd" width="150px" icon="sap-icon://decline" />
                            <Button text="Usage Decision" type="Emphasized" press="onProceedToUsageDecision" width="150px" icon="sap-icon://decision" />
                        </HBox>
                        
                        <Label text="* Decision cannot be reversed once made." visible="{= !${inspection>UsageDecisionCode} }" class="sapUiTinyMarginTop" />
                    </VBox>
                </content>
            </Panel>

            <!-- Section: New Result Entry (Incremental) -->
            <Panel headerText="Record New Result (Daily Entry)" visible="{= !!${inspection>InspectionLotNumber} &amp;&amp; !${inspection>UsageDecisionCode} &amp;&amp; ${inspection>UsageDecisionStatus} !== 'Decision Made' }" expandable="true" expanded="true" class="sapUiResponsiveMargin" width="auto">
                <content>
                    <VBox>
                        <HBox alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                            <Label text="Enter quantities processed today:" design="Bold" />
                            <Text text="Progress: {inspection>InspectedQuantity} / {inspection>ActualQuantity} {inspection>UnitOfMeasure} Recorded" class="sapUiTinyMarginBegin" />
                        </HBox>
                        <HBox alignItems="Center" wrap="Wrap">
                            <VBox class="sapUiMediumMarginEnd">
                                <Label text="Unrestricted (Good)" class="sapUiTinyMarginBottom" />
                                <Input id="inputUnrestricted" placeholder="0" type="Number" width="140px" class="sapUiTinyMarginBottom"/>
                            </VBox>
                            <VBox class="sapUiMediumMarginEnd">
                                <Label text="Blocked (Defect)" />
                                <Input id="inputBlocked" placeholder="0" type="Number" width="120px"/>
                            </VBox>
                            <VBox class="sapUiSmallMarginEnd">
                                <Label text="Production (Rework)" />
                                <Input id="inputProduction" placeholder="0" type="Number" width="120px"/>
                            </VBox>
                            <Button text="Save Record" type="Emphasized" icon="sap-icon://save" press="onSaveResult" class="sapUiSmallMarginTop" />
                        </HBox>
                        <Text text="* Records are cumulative. Enter only the quantity for the current session." class="sapUiTinyMarginTop" type="Secondary" />
                    </VBox>
                </content>
            </Panel>

            <!-- Debug Info Panel (Remove in production) -->
            <Panel headerText="Debug Information" visible="true" expandable="true" expanded="false" class="sapUiResponsiveMargin">
                <content>
                    <VBox>
                        <Text text="Result Model Available: {= !!${result>/} }" />
                        <Text text="Result Data Count: {= ${result>/ZQM_RESULT_PR} ? ${result>/ZQM_RESULT_PR}.length : 'No data' }" />
                        <Text text="Current Lot: {inspection>InspectionLotNumber}" />
                        <Text text="Inspection Model Available: {= !!${inspection>/} }" />
                    </VBox>
                </content>
            </Panel>

            <!-- Section: History Table -->
            <Table id="resultTable" items="{result>/ZQM_RESULT_PR}" growing="true" growingThreshold="10" class="sapUiSmallMarginTop">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Recording History" level="H2"/>
                        <ToolbarSpacer />
                        <SearchField search="onSearch" width="auto" placeholder="Search Results" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Inspection Lot" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Plant" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Inspector" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Category" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Stock Code" />
                    </Column>
                     <Column>
                        <Text text="Usage Decision" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{result>InspectionLotNumber}" />
                            <Text text="{result>PlantCode}" />
                            <Text text="{result>InspectorName}" />
                            <Text text="{path: 'result>RecordedDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}" />
                            <ObjectStatus text="{result>ResultCategory}" state="{path: 'result>ResultCategory', formatter: '.formatCategoryState'}" />
                            <ObjectNumber number="{result>StockCode}" />
                            <!-- Display Usage Decision Status with proper formatting -->
                            <ObjectStatus 
                                text="{path: 'result>UsageDecisionCode', formatter: '.formatUDText'}"
                                state="{path: 'result>UsageDecisionCode', formatter: '.formatUDState'}"
                                icon="{= ${result>UsageDecisionCode} ? 'sap-icon://accept' : 'sap-icon://pending' }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>

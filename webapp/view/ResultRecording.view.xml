<mvc:View controllerName="quality.controller.ResultRecording"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f">
    <Page id="resultPage" title="Result Recording" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <!-- Header: Lot Details -->
            <ObjectHeader
                title="Lot {inspection>InspectionLotNumber}"
                number="{inspection>ActualQuantity}"
                numberUnit="{inspection>UnitOfMeasure}"
                intro="{inspection>PlantDescription} ({inspection>Plant})"
                backgroundDesign="Translucent">
                <attributes>
                    <ObjectAttribute title="Material" text="{inspection>SelectedMaterial}" />
                    <ObjectAttribute title="Origin" text="{inspection>LotOrigin}" />
                </attributes>
                <statuses>
                    <ObjectStatus title="Status" text="{inspection>UsageDecisionStatus}" state="{= ${inspection>UsageDecisionStatus} === 'Decision Made' ? 'Success' : 'Warning' }" />
                </statuses>
            </ObjectHeader>

            <!-- Section: New Result Entry (Incremental) -->
            <Panel headerText="Record New Result (Daily Entry)" visible="{= !${inspection>UsageDecisionCode} &amp;&amp; ${inspection>UsageDecisionStatus} !== 'Decision Made' }" expandable="true" expanded="true" class="sapUiResponsiveMargin" width="auto">
                <content>
                    <VBox>
                        <Label text="Enter quantities processed today:" />
                        <HBox alignItems="Center" wrap="Wrap">
                            <VBox class="sapUiSmallMarginEnd">
                                <Label text="Unrestricted (Good)" />
                                <Input placeholder="0" type="Number" width="120px" />
                            </VBox>
                            <VBox class="sapUiSmallMarginEnd">
                                <Label text="Blocked (Defect)" />
                                <Input placeholder="0" type="Number" width="120px"/>
                            </VBox>
                            <VBox class="sapUiSmallMarginEnd">
                                <Label text="Production (Rework)" />
                                <Input placeholder="0" type="Number" width="120px"/>
                            </VBox>
                            <Button text="Save Record" type="Emphasized" icon="sap-icon://save" class="sapUiSmallMarginTop" />
                        </HBox>
                        <Text text="* Records are cumulative. Enter only the quantity for the current session." class="sapUiTinyMarginTop" type="Secondary" />
                    </VBox>
                </content>
            </Panel>

            <!-- Section: History Table -->
            <Table id="resultTable" items="{result>/ZQM_RESULT_PR}" growing="true" growingThreshold="10" class="sapUiSmallMarginTop">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Recording History" level="H2"/>
                        <ToolbarSpacer />
                        <SearchField search="onSearch" width="auto" placeholder="Search Results" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Inspection Lot" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Plant" />
                    </Column>
                    <Column minScreenWidth="Tablet" demandPopin="true">
                        <Text text="Inspector" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Category" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Stock Code" />
                    </Column>
                     <Column>
                        <Text text="Status" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{result>InspectionLotNumber}" />
                            <Text text="{result>PlantCode}" />
                            <Text text="{result>InspectorName}" />
                            <Text text="{path: 'result>RecordedDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' }}" />
                            <ObjectStatus text="{result>ResultCategory}" state="{path: 'result>ResultCategory', formatter: '.formatCategoryState'}" />
                            <ObjectNumber number="{result>StockCode}" />
                            <!-- Display Booking Status based on Usage Decision Code availability. If code exists, it's View Only. -->
                            <ObjectStatus 
                                text="{= ${result>UsageDecisionCode} ? 'View Only' : 'Editable' }"
                                state="{= ${result>UsageDecisionCode} ? 'Warning' : 'Success' }"
                                icon="{= ${result>UsageDecisionCode} ? 'sap-icon://display' : 'sap-icon://edit' }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>

<mvc:View
    controllerName="quality.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    
    <Page showHeader="false" class="loginPage">
        <content>
            <VBox class="loginContainer" alignItems="Center" justifyContent="Center">
                
                <!-- Header Section -->
                <VBox class="loginHeader" alignItems="Center">
                    <Icon src="sap-icon://quality-issue" size="4rem" color="#0070f2"/>
                    <Title text="Quality Management System" level="H1" class="loginTitle"/>
                    <Text text="SAP Integrated Quality Control Portal" class="loginSubtitle"/>
                </VBox>
                
                <!-- Login Form -->
                <VBox class="loginForm">
                    <Panel headerText="Sign In" class="loginPanel">
                        <content>
                            <VBox class="loginInputs">
                                <Label text="Username:" class="loginLabel"/>
                                <Input 
                                    value="{auth>/username}" 
                                    placeholder="Enter your username (e.g., K901900)"
                                    class="loginInput"
                                    submit="onEnterPressed"/>
                                
                                <Label text="Password:" class="loginLabel"/>
                                <Input 
                                    type="Password"
                                    value="{auth>/password}" 
                                    placeholder="Enter your password"
                                    class="loginInput"
                                    submit="onEnterPressed"/>
                                
                                <HBox class="loginButtons" justifyContent="SpaceBetween">
                                    <Button 
                                        text="Login" 
                                        type="Emphasized" 
                                        press="onLogin"
                                        class="loginButton"/>
                                    <Button 
                                        text="Demo Login" 
                                        type="Transparent" 
                                        press="onDemoLogin"
                                        class="demoButton"/>
                                </HBox>
                            </VBox>
                        </content>
                    </Panel>
                </VBox>
                
                <!-- Info Section -->
                <VBox class="loginInfo" alignItems="Center">
                    <Text text="Supported Credentials:" class="infoTitle"/>
                    <VBox class="credentialsList">
                        <Text text="• SAP User: K901900 / 12345" class="credentialItem"/>
                        <Text text="• Demo Mode: demo / demo" class="credentialItem"/>
                        <Text text="• Admin: admin / admin" class="credentialItem"/>
                    </VBox>
                </VBox>
                
            </VBox>
        </content>
    </Page>
    
</mvc:View>